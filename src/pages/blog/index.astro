---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        color: white;
      }

      h1 {
        text-align: center;
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 3rem;
        background: linear-gradient(
          135deg,
          #ffffff 0%,
          #f8fafc 50%,
          #e2e8f0 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      ul li {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border-radius: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow:
          0 8px 32px rgba(0, 0, 0, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.2);
        position: relative;
        min-height: 280px;
      }

      ul li:hover {
        transform: translateY(-5px);
        box-shadow:
          0 20px 40px rgba(0, 0, 0, 0.2),
          inset 0 1px 0 rgba(255, 255, 255, 0.3);
      }

      ul li * {
        text-decoration: none;
        transition: 0.3s ease;
      }

      ul li:first-child {
        grid-column: 1 / -1;
        margin-bottom: 1rem;
        min-height: 400px;
      }

      ul li:first-child .title {
        font-size: 2.5rem;
        font-weight: 700;
      }
      ul li img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 0;
        z-index: 1;
      }

      ul li:first-child img {
        height: 100%;
      }

      ul li a {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        color: white;
        padding: 2rem;
        position: relative;
        z-index: 3;
        height: 100%;
        min-height: inherit;
        box-sizing: border-box;
      }

      ul li a::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          to top,
          rgba(0, 0, 0, 0.8) 0%,
          rgba(0, 0, 0, 0.4) 50%,
          rgba(0, 0, 0, 0.1) 100%
        );
        z-index: -1;
      }

      .title {
        margin: 0 0 0.5rem 0;
        color: white;
        line-height: 1.3;
        font-size: 1.4rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        position: relative;
        z-index: 5;
      }

      .date {
        margin: 0;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.95rem;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
        position: relative;
        z-index: 5;
      }

      ul li a:hover .title {
        color: #d946ef;
        text-shadow: 0 2px 8px rgba(217, 70, 239, 0.3);
      }

      ul li a:hover .date {
        color: white;
      }

      @media (max-width: 768px) {
        main {
          padding: 1rem 0.5rem;
        }

        h1 {
          font-size: 2.2rem;
          margin-bottom: 2rem;
        }

        ul {
          grid-template-columns: 1fr;
          gap: 1.5rem;
        }

        ul li {
          min-height: 250px;
        }

        ul li:first-child {
          margin-bottom: 0.5rem;
          min-height: 300px;
        }

        ul li:first-child .title {
          font-size: 1.8rem;
        }

        ul li a {
          padding: 1.5rem;
        }

        .title {
          font-size: 1.2rem;
        }

        .date {
          font-size: 0.9rem;
        }
      }

      @media (max-width: 480px) {
        main {
          padding: 0.5rem;
        }

        h1 {
          font-size: 1.8rem;
          margin-bottom: 1.5rem;
        }

        ul {
          gap: 1rem;
        }

        ul li {
          min-height: 200px;
        }

        ul li:first-child {
          min-height: 250px;
        }

        ul li:first-child .title {
          font-size: 1.5rem;
        }

        ul li a {
          padding: 1rem;
        }

        .title {
          font-size: 1.1rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h1>Blog</h1>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  <img
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt=""
                  />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
